{
    "compilerOptions": {
      "sourceMap": true,
      "keyofStringsOnly": true, 
      "target": "es5",
      "jsx": "react",
      "module": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "strict": true,
      "outDir": "build",
      "lib": ["es6", "es7", "dom"],
      "baseUrl": "ReactApp",
      "paths": {
        "@app/*": ["./*"],
        "@components/*": ["./components/*"],
        "@models/*": ["./models/*"],
        "@redux/*": ["./redux/*"],
        "@utils/*": ["./utils/*"]
      }
    },
    "exclude": ["dist", "build", "node_modules"]
  }